<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Innowise.Music.View.LoginPage"
             BackgroundColor="{StaticResource PageBackgroundColor}"
             xmlns:viewmodel="clr-namespace:Innowise.Music.ViewModel"
             x:DataType="viewmodel:LoginPageViewModel"
             Shell.NavBarIsVisible="False">
    <Grid Background="{StaticResource BackgroundGradient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Logo -->
        <HorizontalStackLayout Grid.Row="1"
                               HorizontalOptions="Center"
                               Margin="0,0,0,40"
                               Spacing="0">
            <Label Text="inno"
                   TextColor="{StaticResource PrimaryRed}"
                   Style="{StaticResource LogoLabelStyle}" />
            <Label Text="music"
                   TextColor="{StaticResource PrimaryRed}"
                   Style="{StaticResource LogoLabelStyle}"
                   Opacity="0.6" />
        </HorizontalStackLayout>

        <!-- Email Entry -->
        <Border Grid.Row="3"
                StrokeThickness="0"
                Margin="30,0"
                BackgroundColor="{StaticResource InputBackgroundColor}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="5" />
            </Border.StrokeShape>
            <Entry Placeholder="E-Mail"
                   Text="{Binding Email}"
                   TextColor="{StaticResource InputTextColor}"
                   PlaceholderColor="{StaticResource InputPlaceholderColor}"
                   HeightRequest="50"
                   FontSize="16"
                   Keyboard="Email"
                   BackgroundColor="Transparent" />
        </Border>

        <!-- Password Entry -->
        <Border Grid.Row="4"
                StrokeThickness="0"
                Margin="30,40,30,15"
                BackgroundColor="{StaticResource InputBackgroundColor}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="5" />
            </Border.StrokeShape>
            <Entry Placeholder="Password"
                   Text="{Binding Password}"
                   TextColor="{StaticResource InputTextColor}"
                   PlaceholderColor="{StaticResource InputPlaceholderColor}"
                   HeightRequest="50"
                   FontSize="16"
                   IsPassword="True"
                   BackgroundColor="Transparent" />
        </Border>

        <!-- Login Button -->
        <Border Grid.Row="5"
                StrokeThickness="0"
                Margin="30,40,30,15"
                BackgroundColor="{StaticResource PrimaryRed}"
                HeightRequest="50"
                HorizontalOptions="Fill">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="25" />
            </Border.StrokeShape>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding LoginCommand}" />
            </Border.GestureRecognizers>
            <Label HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="16"
                   FontAttributes="Bold">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Log in to " TextColor="White" />
                        <Span Text="inno" TextColor="White" FontAttributes="Bold" />
                        <Span Text="music" TextColor="#99FFFFFF" FontAttributes="Bold" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </Border>

        <!-- Google Button -->
        <Border Grid.Row="6"
                Stroke="{StaticResource GoogleButtonBorderColor}"
                StrokeThickness="1"
                Margin="30,15"
                BackgroundColor="Transparent"
                HeightRequest="50"
                HorizontalOptions="Fill">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="25" />
            </Border.StrokeShape>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding GoogleLoginCommand}" />
            </Border.GestureRecognizers>
            <Grid Padding="20,0">
                <Image Source="google_logo.png"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"
                       HeightRequest="20"
                       WidthRequest="20" />
                <Label Text="Continue with Google"
                       TextColor="White"
                       FontSize="16"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Grid>
        </Border>

        <!-- Sign Up Link -->
        <Label Grid.Row="7"
               Text="Sign up"
               Style="{StaticResource SignUpLabelStyle}"
               Margin="0,30,0,0">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding SignUpCommand}" />
            </Label.GestureRecognizers>
        </Label>
    </Grid>
</ContentPage>