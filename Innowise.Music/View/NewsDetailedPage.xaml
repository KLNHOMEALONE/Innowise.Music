<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Innowise.Music.View.NewsDetailedPage"
             Title="NewsDetailedPage"
             xmlns:viewmodel="clr-namespace:Innowise.Music.ViewModel"
             x:DataType="viewmodel:NewsDetailedPageViewModel">
    <VerticalStackLayout Spacing="10" Margin="0">
        <Image HeightRequest="250" Aspect="AspectFill" Source="{Binding News.ImageUrl}"/>
        <Label Margin="20,0,20,0" HorizontalOptions="Start" FontSize="Title" Text="{Binding News.Title}"/>
        <Label Margin="20,0,20,0" HorizontalOptions="Start" FontSize="Small" Text="{Binding News.Content}"/>
    </VerticalStackLayout>

</ContentPage>