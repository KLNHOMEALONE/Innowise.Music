<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Innowise.Music.Controls.InputEntryControl"
             x:Name="this">
    <Border StrokeThickness="0"
            BackgroundColor="{StaticResource InputBackgroundColor}">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="5" />
        </Border.StrokeShape>
        <Entry Placeholder="{Binding Placeholder, Source={x:Reference this}}"
               Text="{Binding Text, Source={x:Reference this}}"
               IsPassword="{Binding IsPassword, Source={x:Reference this}}"
               Keyboard="{Binding Keyboard, Source={x:Reference this}}"
               TextColor="{StaticResource InputTextColor}"
               PlaceholderColor="{StaticResource InputPlaceholderColor}"
               HeightRequest="50"
               FontSize="16"
               BackgroundColor="Transparent" />
    </Border>
</ContentView>
